<div class="container mt-5">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" style="color: #007bff;"><i class="fa fa-home" style="margin-right: 5px; color: #007bff;"></i>Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Categories</li>
            </ol>
        </nav>
    </div>
    
    <div class="flash-messages mb-4">
        <% if (successMessage && successMessage.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= successMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (errorMessage && errorMessage.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    </div>
    <h2 class="text-center" style="font-weight: bolder;">Recipe Categories</h2>
    <div class="custom-line mb-4"></div>
    <div class="dish_area">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="dish_wrap d-flex">
                        <% if (categories.length > 0) { %>
                            <% categories.forEach((category) => { %>
                                <div class="single_dish text-center">
                                    <div class="thumb">
                                        <img src="/images/categories/<%= category.image %>" alt="<%= category.name %>">
                                    </div>
                                    <h3><%= category.categoryName %></h3>
                                    <p><%= category.description %></p>
                                    <% if (userId && category.userId.toString() === userId.toString()) { %>
                                        <a href="/users/edit-category/<%= category._id %>" class="btn line_btn mt-2">Edit</a>
                                    <% } %>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p>No categories available.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>